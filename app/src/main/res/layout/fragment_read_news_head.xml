<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_read_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_read_news"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:alpha="5"
        android:background="@drawable/image_vague"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_above="@+id/tv_support"
        style="@style/read_news_head_title"
        />

    <TextView
        android:id="@+id/tv_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_read_news"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        style="@style/read_news_head_support"
        />

</RelativeLayout>