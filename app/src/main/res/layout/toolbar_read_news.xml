<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:id="@+id/tb_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="false"
        android:layout_toStartOf="@+id/tb_collection"
        android:src="@mipmap/ic_share_white_24dp"
        />
    <ImageView
        android:id="@+id/tb_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="false"
        android:layout_toStartOf="@+id/tb_comment"
        android:src="@mipmap/ic_star_white_24dp"
        />
    <TextView
        android:id="@+id/tb_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:drawableStart="@mipmap/ic_comment_white_24dp"
        android:layout_toStartOf="@+id/tb_popularity"
        style="@style/toolbar_contain"
        />
    <TextView
        android:id="@+id/tb_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:drawableStart="@mipmap/ic_thumb_up_white_24dp"
        android:layout_alignParentEnd="true"
        style="@style/toolbar_contain"
        />
</RelativeLayout>